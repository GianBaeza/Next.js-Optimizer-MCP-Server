# ==============================================
# GitHub Next.js Optimizer MCP Server
# Environment Configuration Example
# ==============================================

# --------------------------------------------
# GitHub Configuration (REQUIRED)
# --------------------------------------------
# Personal Access Token from GitHub
# Get it from: https://github.com/settings/tokens
# Required scopes: repo, read:user
GITHUB_TOKEN=ghp_your_github_token_here

# --------------------------------------------
# Cache Settings (OPTIONAL)
# --------------------------------------------
# Enable/disable caching system
GITHUB_CACHE_ENABLED=true

# Cache Time-To-Live in milliseconds (5 minutes = 300000ms)
GITHUB_CACHE_TTL=300000

# --------------------------------------------
# Analysis Settings (OPTIONAL)
# --------------------------------------------
# Maximum number of files to analyze concurrently
MAX_CONCURRENT_FILES=10

# Maximum file size to analyze (in bytes)
# Default: 1MB = 1048576 bytes
MAX_FILE_SIZE=1048576

# --------------------------------------------
# Logging Settings (OPTIONAL)
# --------------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable file logging (in addition to console)
LOG_FILE_ENABLED=false

# Path to log file (relative or absolute)
LOG_FILE_PATH=./logs/mcp-server.log

# --------------------------------------------
# Node Environment (OPTIONAL)
# --------------------------------------------
# Environment: development, production, test
NODE_ENV=production
